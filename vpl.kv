
<CodeArea>:
    id: code_area

    ActionBar:
        ActionView:
            ActionPrevious:
                title: "Cord"
                with_previous: False
            ActionOverflow:

            ActionButton:
                text: "Execute"
                on_press: code_area.exec_block()

            ActionGroup:
                mode: "spinner"
                text: "Nest"
                ActionButton:
                    text: "If"
                    on_press: code_area.set_block("if")
                ActionButton:
                    text: "End"
                    on_press: code_area.set_block("end")

            ActionGroup:
                mode: "spinner"
                text: "Function"
                ActionButton:
                    text: "Print"
                    on_press: code_area.set_block("print")

            ActionButton:
                text: "Elem"
                on_press: code_area.set_block("elem")

            ActionButton:
                text: "Variable"
                on_press: code_area.set_block("variable")

<RootWidget>:
    orientation: "horizontal"

    CodeArea:
        size_hint_x: 0.65

    BoxLayout:
        orientation: "vertical"
        size_hint_x: 0.35

        CodeInput:
            id: ti_code
            size_hint_y: 0.7

