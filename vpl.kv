
RootWidget

<RootWidget>:

    BoxLayout:
        orientation: "horizontal"

        BoxLayout:
            orientation: "vertical"
            size_hint_x: 0.65

            ActionBar:
                ActionView:
                    ActionPrevious:
                        title: "Cord"
                        with_previous: False
                    ActionOverflow:

                    ActionButton:
                        text: "Execute"
                        on_press: root.code_area.exec_block()

                    ActionGroup:
                        mode: "spinner"
                        text: "Nest"
                        ActionButton:
                            text: "If"
                            on_press: root.code_area.set_block(1)

                    ActionGroup:
                        mode: "spinner"
                        text: "Function"
                        ActionButton:
                            text: "Print"
                            on_press: root.code_area.set_block(0)

                    ActionButton:
                        text: "Elem"
                        on_press: root.code_area.set_block(2)

        BoxLayout:
            orientation: "vertical"
            size_hint_x: 0.35

            CodeInput:
                id: ti_code
                size_hint_y: 0.7

            TextInput:
                id: ti_exec
                size_hint_y: 0.3



