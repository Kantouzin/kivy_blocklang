
<CodeArea>:
    id: code_area

<RootWidget>:
    orientation: "horizontal"

    BoxLayout:
        size_hint_x: 0.65

        orientation: "vertical"

        CodeArea:
            id: code_area

        ActionBar:
            ActionView:
                ActionPrevious:
                    title: "Cord"
                    with_previous: False
                ActionOverflow:

                ActionButton:
                    text: "Execute"
                    on_press: code_area.exec_block()

                ActionGroup:
                    mode: "spinner"
                    text: "Nest"
                    ActionButton:
                        text: "if"
                        on_press: code_area.set_block("if")
                    ActionButton:
                        text: "Object"
                        on_press: code_area.set_block("object")
                    ActionButton:
                        text: "Define"
                        on_press: code_area.set_block("define")

                ActionGroup:
                    mode: "spinner"
                    text: "Function"
                    ActionButton:
                        text: "Print"
                        on_press: code_area.set_block("print")

                ActionButton:
                    text: "Elem"
                    on_press: code_area.set_block("elem")

                ActionButton:
                    text: "Variable"
                    on_press: code_area.set_block("variable")

    BoxLayout:
        id: result_block
        orientation: "vertical"
        size_hint_x: 0.35

        CodeInput:
            id: ti_code
            size_hint_y: 0.7

        TextInput:
            id: ti_exec
            size_hint_y: 0.3
